                />
            <Button
                Style="{StaticResource MyButtonStyle}"
                x:Name="Switzerland"
                Canvas.Left="330" 
                Canvas.Top="430"
                Click="OpenModal"
                />
            <Button
                Style="{StaticResource MyButtonStyle}"
                x:Name="Austria"
                Canvas.Left="410" 
                Canvas.Top="420"
                Click="OpenModal"
                />
            <Button
                Style="{StaticResource MyButtonStyle}"
                x:Name="Hungary"
                Canvas.Left="470" 
                Canvas.Top="435"
