<UserControl x:Class="Navigation.Views.EuropeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Navigation.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" TextAlignment="Center" FontSize="20" FontWeight="Bold">THIS IS EUROPE</TextBlock>

        <Image Grid.Row="1" Stretch="Fill">
            <Image.Source>
                <BitmapImage UriSource="/Images/Europe.jpg"/>
            </Image.Source>
        </Image>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10" Width="150" Content="Home/World" Command="{Binding NavigateToWorldCommand}"/>
            <Button Margin="10" Width="150" Content="Europe" />
            <Button Margin="10" Width="150" Content="Lithuania" Command="{Binding NavigateToLithuaniaCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
