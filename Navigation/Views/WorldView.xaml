<UserControl x:Class="Navigation.Views.WorldView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Navigation.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" TextAlignment="Center" x:Name="headerName"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10" Width="150" Content="Home/World" Command="{Binding NavigateToWorldCommand}"/>
            <Button Margin="10" Width="150" Content="Europe" Command="{Binding NavigateToEuropeCommand}"/>
            <Button Margin="10" Width="150" Content="Lithuania" Command="{Binding NavigateToLithuaniaCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
